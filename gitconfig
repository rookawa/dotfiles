[core]
    pager = less -q -R
    excludesfile = ~/.gitignore
    preloadindex = true

[color]
    ui = auto

[color "diff"]
    # http://qiita.com/qurage/items/452f2debb64e2708a46c
    meta = 242 238
    frag = 239 236
    old = 167 normal
    new = 030 normal
    context = 240
    commit = 246 024

[alias]
    st = status
    co = checkout
    ci = commit
    typechange = status -s | awk '$1=="T"{print $2}' | xargs git checkout
    graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
    br = switch
    review = diff origin/master...
    commit-log = log origin/master..
    delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %

[help]
    autocorrect = 1

[push]
    # Use the Git 1.x.x default to avoid errors on machines with old Git
    # installations. To use `simple` instead, add this to your `~/.extra` file:
    # `git config --global push.default simple`. See http://git.io/mMah-w.
    default = matching

[pager]
    log  = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less -RX
    show = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less -RX
    diff = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less -RX

[diff]
    tool      = vimdiff
    algorithm = histogram
    compactionHeuristic = true

[ghq]
    root = ~/src

[merge]
    tool = vimdiff

[zgit "keybind"]
    echo   = ctrl-e
    add    = ctrl-a
    add-p  = ctrl-w
    commit = ctrl-c
    diff   = ctrl-d
    reset  = ctrl-r

[zgit "default"]
    toggle-all = ctrl-z

[zgit "core"]
    action   = status
    tool     = enhancd
    lessopen = "| pygmentize -O style=solarized -f console256 -g %s"
